<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => @book.title.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @book.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
  <dd><%= @book.author %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isbn) %>:</strong></dt>
  <dd><%= @book.isbn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avg_rating) %>:</strong></dt>
  <dd><%= @book.avg_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @book.image %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn'  %>
  <% if ( user_signed_in? ) %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_book_path(@book), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                book_path(@book),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
