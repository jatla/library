<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"> Users </h3>
  </div>
  <div class="panel-body">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Is Admin</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to glyph(:pencil, {:tag => :span}), edit_user_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>


