<%- model_class = User -%>
<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
<div class="page-header">
  <h4><%=t @user.name%></h4>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar) %>:</strong></dt>
  <dd><%= image_tag(@user.avatar, class: "img") %></dd>
</dl>
  <div class="control-group">
    <%= f.label :is_admin, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_admin, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_blocked, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_blocked, :class => 'check_box' %>
    </div>
  </div>

<%= f.submit nil, :class => 'btn btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            users_path, :class => 'btn' %>
<% end %>
