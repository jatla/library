<%- model_class = UserConfig -%>
<div class="page-header">
  <h3>Preferences</h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:opt_out_by_rating) %>:</strong></dt>
  <dd><%= @user_config.opt_out_by_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rating_threshold) %>:</strong></dt>
  <dd><%= @user_config.rating_threshold %></dd>
  <dt><strong><%= model_class.human_attribute_name(:opt_out_by_review) %>:</strong></dt>
  <dd><%= @user_config.opt_out_by_review %></dd>
  <dt><strong><%= model_class.human_attribute_name(:daily_digest_enabled) %>:</strong></dt>
  <dd><%= @user_config.daily_digest_enabled %></dd>
</dl>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_config_path(@user_config), :class => 'btn' %>